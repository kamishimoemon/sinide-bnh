#!/usr/bin/env php
<?php
$autoloader = dirname(__DIR__) . "/vendor/autoload.php";
if (!file_exists($autoloader)) die("Couldn't find autoloader at {$autoloader}.\nTry running composer dump-autoload");
require_once($autoloader);

define("HOME_DIR", $_SERVER["HOME"]);

$ini_filename = HOME_DIR . '/bnh.ini';
$config = parse_ini_file($ini_filename, true);
if ($config === false) die("No se pudo cargar configuracion en: {$ini_filename}");

$stopwatch = new \sinide\bnh\util\Stopwatch();
$stopwatch->start();

(new \sinide\bnh\LockFile(
	new \sinide\bnh\Path($config["proceso"]["pathLock"])
))->lock(
	new \sinide\bnh\Process(
		new \sinide\bnh\BaseDatosIni($config["dbNegocio"])
	)
);

$time = $stopwatch->stop();
echo "El tiempo de ejecuci√≥n del archivo ha sido de " . $time . " segundos";